@model PassionProject.Models.ViewModels.ShowTraveler
@{
    ViewBag.Title = "Show";
}

<h2>Travelers</h2>
<!--show the information about the traveler when clicked in list view -->
<h2>@Model.traveler.TravelerfName @Model.traveler.TravelerlName</h2>
<div class="col2">
    <div><span>First Name:</span> @Model.traveler.TravelerfName</div>
    <div><span>Last Name:</span>@Model.traveler.TravelerlName</div>
    <div><span>Contact</span> @Model.traveler.TravelerContact</div>
    <div><span>Guests:</span>@Model.traveler.Guests</div>
    <div><span>Email:</span>@Model.traveler.TravelerEmail</div>
    
</div>
<div class="col2last">
    <div class="sectionheader">Trips that traveler has:</div>
    @{
    <!--I want to show the trips associated with this traveler but code for adding not implemented yet-->
        foreach (var trip in @Model.trips)
        {
            //here i will show all the trips which are associated with this traveler shown above
            <div class="lineitem">
                <a href="/Trip/Show/@trip.TripId">@trip.TripDate</a>
                
                
            </div>
        }

    }
</div>