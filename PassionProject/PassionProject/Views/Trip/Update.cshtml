@model PassionProject.Models.ViewModels.UpdateTrip
@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>
<!--update view for updating the trip-->

<form method="POST" action="/Trip/Update/@Model.trip.TripId">

    <div id="divadd">
        <div><span> Trip Date:</span><input id="TripDate" type="datetime" name="TripDate" /></div>

        <div>

            <span>Trip To:</span>
            <select id="DestinationId" type="text" name="DestinationId">
                @{
                    //A rendering loop for presenting a list of destinations
                    //user can choose the destination from the drop down list here and update

                    foreach (var destination in Model.dest)
                    {
                        if (destination.DestinationId == Model.trip.DestinationId)
                        {
                            <option value="@destination.DestinationId" selected>@destination.DestinationName</option>
                        }
                        else
                        {
                            <option value="@destination.DestinationId">@destination.DestinationName</option>
                        }
                    }
                }
            </select>
        </div>

        <div><span>Cost</span><input id="TripCost" type="text" name="TripCost" /></div>

        <input type="submit" value="Update Trip"><!--on clicked form goes where action specifies-->
    </div>
</form>