@model  List<PetGrooming.Models.Species>
@{
    ViewBag.Title = "Add";
}
<!--code referenced from https://github.com/christinebittle/PetGroomingMVC 
 for the purpose of class assignment , dated 30 january, 2020 #PetGroomingMVC-->
<h2>Add a New Pet</h2>
<!--this form on submit goes to controller Pet and look for method Add followed by [httppost]-->
<form method="POST" action="/Pet/Add">

    <div id="divadd">
        <div><span>Name:</span><input id="PetName" type="text" name="PetName" /></div>
        <div>

            <span>Species:</span>
            <select id="SpeciesID" type="text" name="SpeciesID">
                @{
                    //A rendering loop for presenting a list of species

                    foreach (var species in Model)
                    {
                        <option value="@species.SpeciesID">@species.Name</option>

                    }
                }
            </select>
        </div>
        <div><span>Weight:</span><input id="PetWeight" type="text" name="PetWeight" /></div>
        <div><span>Color:</span><input id="PetColor" type="text" name="PetColor" /></div>
        <div>Notes:</div>
        <textarea id="PetNotes" name="PetNotes">

        </textarea>
        <input type="submit" value="Add Pet"><!--on clicked form goes where action specifies-->
    </div>
</form>
