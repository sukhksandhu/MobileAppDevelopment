@model PetGrooming.Models.ViewModels.UpdatePet
@{
    ViewBag.Title = "Update";
}
<!--code referenced from https://github.com/christinebittle/PetGroomingMVC
 for the purpose of class assignment , dated 30 january, 2020 #PetGroomingMVC-->

<!--opens this page when the link update clicked in list page-->
<h2>Update</h2>
<form id="updateform" method="POST" action="/Pet/Update/@Model.pet.PetID">

    <div id="divupdate">
        <div><span>Pet Name:</span><input id="PetName" type="text" name="PetName" value="@Model.pet.PetName" /></div>
        <div><span>Weight:</span><input id="Weight" type="text" name="Weight" value="@Model.pet.Weight" />Kg</div>
        <div><span>Color:</span><input id="Color" type="text" name="Color" value="@Model.pet.Color" /></div>
        <div>Notes:</div>
        <textarea id="PetNotes" name="Notes" value="@Model.pet.Notes">

        </textarea>
        <div>Species:</div>
        <select id="SpeciesID" type="text" name="SpeciesID">
            @{
                //A rendering loop for presenting a list of species
                //it checks if species is associated with selected pet keeps the species selected and keeps
                //on the top of the dropdown list


                foreach (var species in Model.species)
                {

                    if (species.SpeciesID == Model.pet.SpeciesID)
                    {
                        <option value="@species.SpeciesID" selected>@species.Name</option>
                    }
                    else
                    {
                        <option value="@species.SpeciesID">@species.Name</option>
                    }

                }
            }
        </select>
        <div>
            <input type="submit" value="Update ">
        </div>
    </div>
</form>
